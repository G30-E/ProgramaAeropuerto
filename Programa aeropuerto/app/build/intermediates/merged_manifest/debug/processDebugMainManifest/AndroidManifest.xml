<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aeropuerto"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="36" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:label="Programa Aeropuerto"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@android:style/Theme.Material.Light.NoActionBar" >
        <activity
            android:name="com.example.aeropuerto.ui.StatsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.aeropuerto.ui.RecordsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.aeropuerto.ui.NewCaptureActivity"
            android:exported="false" />
        <activity
            android:name="com.example.aeropuerto.ui.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>