    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/txtTitle" android:textStyle="bold" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/txtSubtitle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnDelete" android:text="@string/delete" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>